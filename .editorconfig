root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[{*.md,*.rst}]
trim_trailing_whitespace = false

[{Makefile,*.mk,*.bat}]
indent_style = tab
indent_size = 2

[*.{c,h}]
indent_style = tab
indent_size = 8

[*.pem]
insert_final_newline = false

[*.py]
max_line_length = 119
indent_size = 2

[{*.cmake,CMakeLists.txt}]
max_line_length = 120

[{*.sh,*.yml,*.yaml}]
indent_size = 2

[*.ini]
indent_size = 2

[*.rb]
indent_size = 2

[*.json]
indent_size = 2
